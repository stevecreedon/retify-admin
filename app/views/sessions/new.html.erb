<div id='page-1'>
  <div class="container">
    <div class="row">
      <div class="span12">
        <h1 class='main-title'>Sign in.</h1>
        <div class='sign-form'>
          <%= form_for(:sessions, { url: "/auth/password/callback", html: {class: 'form-horizontal'}}) do |f| %>
            <div class="control-group">
              <%= f.label :email, class: 'control-label' %>
              <div class="controls">
                <%= f.email_field :email, value: flash[:email], class: "input-large", placeholder: "Email" %>
              </div>
            </div>
            <div class="control-group">
              <%= f.label :password, class: 'control-label' %>
              <div class="controls">
                <%= f.password_field :password, class: "input-large", placeholder: "Password" %>
              </div>
            </div>
            <div class="form-actions">
              <%= f.submit 'Sign in', class: 'btn btn-primary' %>
              <%= link_to 'Sign up', new_registration_path, class: 'btn' %><br/>
              <%= link_to 'forgot password?', forgot_password_path %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
