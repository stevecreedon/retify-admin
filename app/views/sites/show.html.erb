<div class="row-fluid sortable">
  <div class="box span12">
    <div class="box-header" data-original-title>
      <h2><i class="icon-edit"></i><span class="break"></span>Your Micro-Hotel website settings</h2>
    </div>
    <div class="box-content">
      <form class='form-horizontal'>
        <fieldset>
          <div class="control-group">
            <%= label_tag :title, 'Title', class: 'control-label' %>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @site.title %></span>
            </div>
          </div>
          <div class="control-group">
            <%= label_tag :subdomain, 'Site name', class: 'control-label' %>
            <div class="controls">
              <span class="input-xlarge uneditable-input">
                <%= @site.domain %>.<%= configatron.domain %>
              </span>
            </div>
          </div>
          <div class="control-group">
            <%= label_tag :domain, 'Domain name', class: 'control-label' %>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @site.domain %></span>
            </div>
          </div>
          <div class="control-group">
            <%= label_tag :email, 'Contact email', class: 'control-label' %>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @site.email %></span>
            </div>
          </div>
          <div class="control-group">
            <%= label_tag :phone, 'Phone number', class: 'control-label' %>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @site.phone %></span>
            </div>
          </div>
          <div class="control-group">
            <%= label_tag :style, 'Micro-Hotel site style', class: 'control-label' %>
            <div class="controls">
              <span class="input-xlarge uneditable-input">style_01</span>
            </div>
          </div>
          <div class="form-actions">
            <%= link_to 'Edit', edit_site_path(@site), data: { remote: true }, class: 'btn btn-primary' %>
          </div>
        </fieldset>
      </form>
    </div>
  </div><!--/span-->
</div><!--/row-->
