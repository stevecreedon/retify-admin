<%= render 'properties/menu' %>
<div class="row-fluid sortable">
  <div class="box span12">
    <div class="box-header" data-original-title>
      <h2><i class="icon-edit"></i><span class="break"></span>Your directions data</h2>
    </div>
    <div class="box-content">
      <form class='form-horizontal'>
        <fieldset>
          <% Direction::TYPES.each do | title | %>
            <% key = title.parameterize.underscore.to_sym %>
            <% unless @directions[key].blank? %>
              <div class="control-group">
                <%= label_tag key, title, class: 'control-label' %>
                <div class="controls">
                  <span class="input-xxlarge uneditable-textarea"><%= @directions[key] %></span>
                </div>
              </div>
            <% end %>
          <% end %>
        </fieldset>
        <div class="form-actions">
          <%= link_to 'Edit', new_property_direction_path(@property), data: { ajax: true }, class: 'btn btn-primary' %>
        </div>
      </form>
    </div>
  </div><!--/span-->
</div><!--/row-->
