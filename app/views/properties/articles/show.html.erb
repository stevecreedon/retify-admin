<%= render 'properties/menu' %>
<div class="row-fluid sortable">
  <div class="box span12">
    <div class="box-header" data-original-title>
      <h2><i class="icon-edit"></i><span class="break"></span>Article details</h2>
    </div>
    <div class="box-content">
      <form class='form-horizontal'>
        <fieldset>
          <div class="control-group">
            <%= label_tag :group, 'Group', class: 'control-label' %>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @article.group_name %></span>
            </div>
          </div>
          <div class="control-group">
            <%= label_tag :title, 'Title', class: 'control-label' %>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @article.title %></span>
            </div>
          </div>
          <div class="control-group">
            <%= label_tag :description, 'Description', class: 'control-label' %>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @article.description %></span>
            </div>
          </div>
        </fieldset>
        <div class="form-actions">
          <%= link_to 'Edit', edit_property_article_path(@property, @article), data: { ajax: true }, class: 'btn btn-primary' %>
          <%= link_to 'Back', property_articles_path(@property), data: { ajax: true }, class: 'btn' %>
        </div>
      </form>
    </div>
  </div><!--/span-->
</div><!--/row-->
