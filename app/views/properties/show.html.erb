<%= render 'menu' %>
<div class="row-fluid sortable">
   <%= render :layout => 'widgets/box', :locals => {h2: 'Edit your property!'} do %>
         
   <div class="box-content">
      <form class='form-horizontal'>
        <fieldset>
          <div class="control-group">
            <%= label_tag :title, 'Title', class: 'control-label' %>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @property.title %></span>
            </div>
          </div>
          <div class="control-group">
            <%= label_tag :description, 'Description', class: 'control-label' %>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @property.description %></span>
            </div>
          </div>
        </fieldset>
        <fieldset>
          <legend>Address</legend>
          <div class="control-group">
            <%= label_tag :address, 'Address', class: 'control-label' %>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @property.address.address %></span>
            </div>
          </div>
          <% unless @property.address.address2.blank? %>
            <div class="control-group">
              <div class="controls">
                <span class="input-xlarge uneditable-input"><%= @property.address.address2 %></span>
              </div>
            </div>
          <% end %>
          <% unless @property.address.state.blank? %>
            <div class="control-group">
              <%= label_tag :state, 'State', class: 'control-label' %>
              <div class="controls">
                <span class="input-xlarge uneditable-input"><%= @property.address.state %></span>
              </div>
            </div>
          <% end %>
          <div class="control-group">
            <%= label_tag :city, 'City', class: 'control-label' %>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @property.address.city %></span>
            </div>
          </div>
          <div class="control-group">
            <%= label_tag :country, 'Country', class: 'control-label' %>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @property.address.country %></span>
            </div>
          </div>
          <div class="control-group">
            <%= label_tag :post_code, 'Post code', class: 'control-label' %>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @property.address.post_code %></span>
            </div>
          </div>
        </fieldset>
        <div class="form-actions">
          <%= link_to 'Edit', edit_property_path(@property), data: { ajax: true }, class: 'btn btn-primary' %>
        </div>
      </form>
    </div>
  <% end %><!--/span-->
</div><!--/row-->
