<%= render 'properties/menu' %>
<div class="row-fluid sortable">
  <div class="box span12">
    <div class="box-header" data-original-title>
      <h2><i class="icon-edit"></i><span class="break"></span>Your calendar details</h2>
    </div>
    <div class="box-content">
      <form class='form-horizontal'>
        <fieldset>
          <div class="control-group">
            <%= label_tag :path, 'Provider', class: 'control-label' %>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @calendar.provider %></span>
            </div>
          </div>
          <div class="control-group">
            <%= label_tag :path, 'Path', class: 'control-label' %>
            <div class="controls">
              <span class="input-xlarge uneditable-input"><%= @calendar.path %></span>
            </div>
          </div>
        </fieldset>
        <div class="form-actions">
          <%= link_to 'Edit', edit_property_calendar_path(@property, @calendar), data: { ajax: true }, class: 'btn btn-primary' %>
        </div>
      </form>
    </div>
  </div><!--/span-->
</div><!--/row-->
