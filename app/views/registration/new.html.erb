<section id='sign-page'>
  <div class="container">
    <div class="row">
      <div class="span12">
        <h1>Sign up.</h1>
        <div>
         <a href="/auth/google_oauth2" class="btn btn-primary">Sign up using your Google account</a> - Recommended - <a href="#">find out why</a>
        </div>
        <h1>OR</h1>
        <div class='sign-form'>
          <%= form_for(@identity, { url: registration_index_path, html: {class: 'form-horizontal'}}) do |f| %>
            <div class="control-group">
              <%= f.label :email, class: 'control-label' %>
              <div class="controls">
                <%= f.email_field :email, value: flash[:email], autocomplete: "off", class: "input-large", placeholder: "Email" %>
              </div>
            </div>
            <div class="control-group">
              <%= f.label :password, class: 'control-label' %>
              <div class="controls">
                <%= f.password_field :password, class: "input-large", autocomplete: "off", placeholder: "Password" %>
              </div>
            </div>
            <div class="form-actions">
              <%= f.submit 'Sign up', class: 'btn btn-primary' %>
              <%= link_to 'Sign in', new_session_path, class: 'btn' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
