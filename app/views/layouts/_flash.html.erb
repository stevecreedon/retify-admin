<% if flash[:notice] %>
  <span class="flash-notice"><%= flash[:notice] %></span>
  <script>
    $("span.flash-notice").each(function(){
      noty({
        text: $(this).html(),
        layout:'topCenter',
        animateOpen: { opacity: 'show' },
        type: 'success'
      });
    }).hide();
  </script>
<% end %>
<% if flash[:alert] %>
  <span class="flash-alert"><%= flash[:alert] %></span>
  <script>
    $("span.flash-alert").each(function(){
      noty({
        text: $(this).html(),
        layout:'topCenter',
        animateOpen: { opacity: 'show' },
        type: 'error'
      });
    }).hide();
  </script>
<% end %>

